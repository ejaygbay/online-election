<%- include('./layouts/head') -%>
    <link rel="stylesheet" href="/public/css/style.css" />
    </head>

    <body>
        <!--Main Navigation-->
        <header>
            <!-- Sidebar -->
            <%- include('./layouts/sidebar') -%>

                <!-- Navbar -->
                <%- include('./layouts/navbar') -%>
        </header>

        <!--Main layout-->
        <main style="margin-top: 70px ">
            <div class="container pt-2">
                <!-- Tabs navs -->
                <ul class="nav nav-tabs nav-fill mb-3" id="ex1" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="ex2-tab-1" data-mdb-toggle="tab" href="#parties-tab" role="tab">Parties</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="ex2-tab-2" data-mdb-toggle="tab" href="#create-party-tab" role="tab">Create Party</a>
                    </li>
                </ul>
                <!-- Tabs navs -->

                <!-- Tabs content -->
                <div class="tab-content" id="ex2-content">
                    <!-- Voters List Tab -->
                    <div class="tab-pane fade show active" id="parties-tab" role="tabpanel">
                        <h1 class="mb-4" style="text-align: center;">List Of Parties</h1>

                        <% if(role === 'superadmin'){ %>
                            <select class="custom-select" id="elections-dropdown2">
                                <option value="">Select Election</option>
                            </select>
                            <% } %>

                                <table class="table responsive">
                                    <thead>
                                        <th>#</th>
                                        <th scope="col">Party</th>
                                        <th scope="col">Action</th>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                    </div>

                    <!-- Voters Registration Tab -->
                    <div class="tab-pane fade" id="create-party-tab" role="tabpanel">
                        <h1 class="mb-4" style="text-align: center;">Create Party</h1>

                        <section style="display: grid; justify-items: center;">

                            <!-- <form> -->
                            <div class="col-md-4 mb-3">
                                <div class="form-outline">
                                    <input type="text" id="new-party-name" class="form-control form-control-lg" />
                                    <label class="form-label" for="new-party-name">Party Name</label>
                                </div>
                            </div>

                            <% if(role === 'superadmin'){ %>
                                <div class="col-4 mb-3">
                                    <label class="visually-hidden" for="inlineFormSelectPref">Preference</label>
                                    <select class="custom-select" id="elections-dropdown">
                                        <option value="">Select Election</option>
                                    </select>
                                </div>
                                <% } %>

                                    <!-- Submit button -->
                                    <div class="col-md-4 mb-3">
                                        <button type="submit" id="create-party-btn" class="btn btn-primary btn-block btn-lg mb-4" disabled>Create</button>
                                    </div>
                                    <!-- </form> -->
                        </section>
                    </div>
                </div>
                <!-- Tabs content -->







            </div>
        </main>

        <%- include('./layouts/scripts') -%>
            <script src="/public/js/party.js"></script>
    </body>

    </html>